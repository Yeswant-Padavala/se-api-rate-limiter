{
  "name": "se-api-rate-limiter",
  "version": "1.0.0",
  "description": "API Rate Limiter with Redis, Vault, Prometheus, and Gateway Integration",
  "type": "module",
  "main": "server.js",

  "scripts": {
    "dev": "node server.js",
    "test": "jest --runInBand --coverage"
  },

  "dependencies": {
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "ioredis": "^5.4.1",
    "morgan": "^1.10.0",
    "prom-client": "^14.2.0",
    "node-vault": "^0.10.0",
    "express-validator": "^7.0.1"
  },

  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "cross-env": "^7.0.3"
  },

  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "roots": ["<rootDir>/tests"],
    "collectCoverage": true,
    "collectCoverageFrom": ["src/**/*.js"],
    "moduleFileExtensions": ["js", "json", "node"]
  }
}
